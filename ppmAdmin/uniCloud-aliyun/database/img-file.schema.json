// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["fileinfo"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
        "fileinfo": {
        	"bsonType": "file",
        	"fileMediaType": "image",
        	"title": "图片文件",
        	"description": "图片文件信息，包括文件名、url等"
        },
        "url": {
        	"bsonType": "string",
        	"title": "链接",
        	"trim": "both"
        },
        "description": {
        	"bsonType": "string",
        	"description": "维护者自用描述",
        	"title": "备注",
        	"trim": "both"
        }
        
	}
}